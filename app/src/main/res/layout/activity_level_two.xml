<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Title: Level Two -->
    <TextView
        android:id="@+id/levelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level Two"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Description: To proceed enter password -->
    <TextView
        android:id="@+id/levelDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To proceed enter password"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- EditText field to input the password -->
    <EditText
        android:id="@+id/passwordInputView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter password here"
        android:inputType="textPassword"/>

    <!-- Next Level button (disabled by default) -->
    <Button
        android:id="@+id/nextLevelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Next Level"
        android:enabled="false" />

</LinearLayout>
